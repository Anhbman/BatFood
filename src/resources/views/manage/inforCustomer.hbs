<h2>Customer: <span style="color: brown;">{{name}}</span></h2>

<div class="mt-4">

<h4>Bill</h4>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">ID</th>
      <th scope="col">Price</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each customer}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.phucvuid}}</td>
      <td>{{this.hoadon.tongtien}}</td>
      <td>{{this.thoigian}}</td>
    </tr>
    {{else}}
      <tr>
        <td colspan="5" class="text-center">
          Chưa có Thông tin về khách hàng
            {{!-- <a href="customer/create">Thêm khách hàng</a> --}}
        </td>
      </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <th>Total</th>
      <td>{{count}}</td>
      <td>{{total}}</td>
      <td></td>
    </tr>
  </tfoot>
</table>

</div>

<h4>Loyalty point: {{point}}</h4>